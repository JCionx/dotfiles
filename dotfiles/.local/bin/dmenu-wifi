#!/usr/bin/env bash

set -euo pipefail

bssid=$(nmcli device wifi list | sed -n '1!p' | cut -b 9- | dmenu -p "Select Wifi  :" | cut -d' ' -f1)
pass=$(echo "" | dmenu -p "Enter Password  :")
[ -n "$pass" ] && nmcli device wifi connect "$bssid" password "$pass" || nmcli device wifi connect "$bssid"
